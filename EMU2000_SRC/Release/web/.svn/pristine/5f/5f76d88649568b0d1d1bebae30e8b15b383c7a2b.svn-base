<!DOCTYPE html>
<html>
<head>
  <title>EMU2000监控</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
 
  <link rel="icon" href="static/img/icon/xlogo.ico">
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="static/bootstrap/css/bootstrap.min.css"> 
  <!-- Font Awesome core CSS -->
  <link rel="stylesheet" href="static/FontAwesome/css/font-awesome.min.css">

  <!-- datatable css -->
  <link rel="stylesheet" href="static/DataTable/jquery.dataTables.min.css"> 
  <!--link rel="stylesheet" href="static/DataTable/dataTables.bootstrap.min.css"!--> 

  <!-- Custom styles for this template -->
  <link rel="stylesheet" href="static/css/style.css">

  <script src="static/js/jquery-1.12.0.min.js"></script>
  <script src="static/bootstrap/js/bootstrap.min.js"></script>

  
  <!-- datatable js-->
  <script src="static/DataTable/jquery.dataTables.min.js"></script>
</head>

<body>
  <!--site header -->
   <nav class="navbar navbar-inverse navbar-fixed-top site-navbar">
        <div class="container">
             <div class="navbar-header">
                <a class="navbar-brand" href="/">EMU2000 数据显示 </a>
             </div>
        </div>
    </nav>
  <!-- site content -->
     <main class="docs-wrapper container">
         <div class="container-fluid" style="margin-top:20px;margin-bottom:10px;float:right;">
           <button type="button" class="btn btn-info" onclick="Reload();" >刷新数据</button>
         </div>

       <div class="container-fluid">                 
        <div class="row-fluid">
          <table id="example" class="table table-striped table-bordered table-hover datatable" cellspacing="0" >
            <thead>
               <tr>
                 <th>表序号</th>
                 <th>点类型</th>
                 <th>点号</th>
                 <th>点值</th>
               </tr>
            </thead>
            <tbody>
            </tbody>
         </table>
       </div>   
      </div> 
     </main>  
 <!-- Site footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; ESDTEK &nbsp; 2016</p>
            <p><a href="http://www.esdtek.com" target="_blank">北京易艾斯德科技有限公司 | 版权所有</p>
        </div>
    </footer>
    <!-- 回到顶端 -->
    <div id="zan-gotop">
      <i class="icon-double-angle-up"></i>
    </div>
    <!--回到顶端结束 -->
    <script type="text/javascript">
      $(function(){
        //当滚动条的位置处于距顶部100像素以下时，跳转链接出现，否则消失
        $(function () {
            $(window).scroll(function(){
                if ($(window).scrollTop()>100){
                    $("#zan-gotop").fadeIn(1500);
                }
                else
                {
                    $("#zan-gotop").fadeOut(1500);
                }
            });

            //当点击跳转链接后，回到页面顶部位置

            $("#zan-gotop").click(function(){
                $('body,html').animate({scrollTop:0},1000);
                return false;
            });
        });
    });

    $(function () {
        Reload();
        //setInterval(Reload, 15000);
    });


     function Reload(){
        $("#example").dataTable().fnDestroy();
        $.ajax({
            url: '/cgi-bin/getdata.cgi', //  ------cgi程序所在目录
            type: "get",
            data: {},
            dataType: "html",
            success: function (infos) {
                $('tbody').empty();
                $('tbody').append(infos);
                //$("#example").DataTable().draw();//点搜索重新绘制table。
                $('#example').dataTable( {    				
                     "bFilter": true,			
                      "oLanguage": {
			    "sUrl": "static/DataTable/zh_CN.json"
			 } 
	        });
            },
            async: true
        });
       
    }
    </script>
    
</body>
</html>
